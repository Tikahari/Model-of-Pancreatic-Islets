	file = {Riz et al. - 2014 - Mathematical Modeling of Heterogeneous Electrophys.PDF:/home/tk/Zotero/storage/MILLC3JM/Riz et al. - 2014 - Mathematical Modeling of Heterogeneous Electrophys.PDF:application/pdf}
}

