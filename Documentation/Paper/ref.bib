	pages = {066002},
	file = {Loppini et al. - 2015 - Mathematical modeling of gap junction coupling and.pdf:/home/tk/Zotero/storage/LBRNQT4Z/Loppini et al. - 2015 - Mathematical modeling of gap junction coupling and.pdf:application/pdf}
}

